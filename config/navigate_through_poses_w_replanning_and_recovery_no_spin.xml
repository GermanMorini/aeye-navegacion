<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="6" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <RateController hz="1.0" name="RateController">
          <RecoveryNode number_of_retries="2" name="ComputePath">
            <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
            <Sequence name="ClearAndWait">
              <ClearEntireCostmap service_name="global_costmap/clear_entirely_global_costmap"/>
              <Wait wait_duration="2"/>
            </Sequence>
          </RecoveryNode>
        </RateController>
        <RecoveryNode number_of_retries="2" name="FollowPath">
          <FollowPath path="{path}" controller_id="FollowPath"/>
          <ClearEntireCostmap service_name="local_costmap/clear_entirely_local_costmap"/>
        </RecoveryNode>
      </PipelineSequence>
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <Sequence name="AckermannRecovery">
          <!-- Limpiar costmaps -->
          <ClearEntireCostmap service_name="local_costmap/clear_entirely_local_costmap"/>
          <ClearEntireCostmap service_name="global_costmap/clear_entirely_global_costmap"/>
          <Wait wait_duration="2"/>
          
          <!-- Reversa mÃ¡s larga -->
          <BackUp backup_dist="3.0" backup_speed="0.3"/>
          <Wait wait_duration="1"/>
          
          <!-- Intentar avanzar un poco -->
          <DriveOnHeading dist_to_travel="1.0" speed="0.2" time_allowance="10"/>
        </Sequence>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>
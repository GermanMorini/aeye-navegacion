<?xml version="1.0"?>
<robot name="quad_ackermann_viewer_safe">

  <material name="black"><color rgba="0.08 0.08 0.08 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>

  <!-- =========================
       BASE
       ========================= -->
  <link name="base_link">
    <visual>
      <origin xyz="0.47 0 0.40" rpy="0 0 0"/>
      <geometry><box size="1.20 0.60 0.25"/></geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0.47 0 0.40" rpy="0 0 0"/>
      <geometry><box size="1.20 0.60 0.25"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0.47 0 0.40" rpy="0 0 0"/>
      <mass value="50.0"/>
      <inertia ixx="2.0" ixy="0" ixz="0" iyy="3.0" iyz="0" izz="4.0"/>
    </inertial>
  </link>

  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- =========================
       SENSORS
       ========================= -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.77 0.0 0.65" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="5e-5" ixy="0" ixz="0" iyy="5e-5" iyz="0" izz="5e-5"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.47 0.0 0.58" rpy="0 0 0"/>
  </joint>

  <link name="gps_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="5e-5" ixy="0" ixz="0" iyy="5e-5" iyz="0" izz="5e-5"/>
    </inertial>
  </link>

  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="0.47 0.0 0.62" rpy="0 0 0"/>
  </joint>


  <!-- =========================
       WHEELS
       ========================= -->
  <link name="rear_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.03" iyz="0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="0.0 0.375 0.24" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="200" velocity="100"/>
  </joint>

  <link name="rear_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.03" iyz="0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="0.0 -0.375 0.24" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="200" velocity="100"/>
  </joint>

  <link name="front_left_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.10 0.08 0.15"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.10 0.08 0.15"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steer_link"/>
    <origin xyz="0.94 0.375 0.24" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.0"/>
    <limit lower="-0.5235987756" upper="0.5235987756" effort="100" velocity="2.0"/>
  </joint>

  <link name="front_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.03" iyz="0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="front_left_steer_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="200" velocity="100"/>
  </joint>

  <link name="front_right_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.10 0.08 0.15"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.10 0.08 0.15"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steer_link"/>
    <origin xyz="0.94 -0.375 0.24" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.0"/>
    <limit lower="-0.5235987756" upper="0.5235987756" effort="100" velocity="2.0"/>
  </joint>

  <link name="front_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.24" length="0.16"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.03" iyz="0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="front_right_steer_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="200" velocity="100"/>
  </joint>

  <!-- =========================
       GAZEBO SIM (FORTRESS)
       ========================= -->

  <gazebo>
    <plugin filename="ignition-gazebo-ackermann-steering-system"
            name="ignition::gazebo::systems::AckermannSteering">
      <left_steering_joint>front_left_steer_joint</left_steering_joint>
      <right_steering_joint>front_right_steer_joint</right_steering_joint>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>0.75</wheel_separation>
      <wheelbase>0.94</wheelbase>
      <wheel_radius>0.24</wheel_radius>
      <steering_limit>0.5235987756</steering_limit>
      <topic>/cmd_vel_steer</topic>
      <odom_topic>/odom</odom_topic>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <publish_odom_tf>false</publish_odom_tf>
    </plugin>
    <plugin filename="ignition-gazebo-joint-state-publisher-system"
            name="ignition::gazebo::systems::JointStatePublisher">
      <publish_frequency>50</publish_frequency>
      <joint_name>front_left_steer_joint</joint_name>
      <joint_name>front_right_steer_joint</joint_name>
      <joint_name>front_left_wheel_joint</joint_name>
      <joint_name>front_right_wheel_joint</joint_name>
      <joint_name>rear_left_wheel_joint</joint_name>
      <joint_name>rear_right_wheel_joint</joint_name>
    </plugin>
  </gazebo>

  <gazebo reference="rear_left_wheel_link">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <gazebo reference="rear_right_wheel_link">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <gazebo reference="front_left_wheel_link">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <gazebo reference="front_right_wheel_link">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <!-- Lidar (Gazebo Sim) -->
  <gazebo reference="lidar_link">
    <sensor type="gpu_lidar" name="lidar_3d">
      <always_on>true</always_on>
      <update_rate>10</update_rate>
      <topic>/lidar</topic>
      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-1.57079632679</min_angle>
            <max_angle> 1.57079632679</max_angle>
          </horizontal>
          <vertical>
            <samples>8</samples>
            <resolution>1</resolution>
            <min_angle>-0.1745329252</min_angle>
            <max_angle> 0.1745329252</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.4</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.03</stddev>
        </noise>
      </lidar>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <topic>/imu/data</topic>
      <imu>
        <angular_velocity>
          <x><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></x>
          <y><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></y>
          <z><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></z>
        </angular_velocity>
        <linear_acceleration>
          <x><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></x>
          <y><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></y>
          <z><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <gazebo reference="gps_link">
    <sensor type="navsat" name="gps_sensor">
      <always_on>true</always_on>
      <update_rate>10</update_rate>
      <topic>/gps/fix</topic>
      <navsat>
        <position_sensing>
          <horizontal>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>0.000005</stddev> </noise>
          </horizontal>
          <vertical>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>0.0000125</stddev> </noise>
          </vertical>
        </position_sensing>
        <velocity_sensing>
          <horizontal>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>0.0000025</stddev>
            </noise>
          </horizontal>
        </velocity_sensing>
      </navsat>
    </sensor>
  </gazebo>
</robot>

<?xml version="1.0"?>
<robot name="quad_ackermann_viewer_safe">

  <material name="black"><color rgba="0.08 0.08 0.08 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>

  <!-- BASE -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.30" rpy="0 0 0"/>
      <geometry><box size="0.80 0.45 0.12"/></geometry>
      <material name="blue"/>
    </visual>

    <!-- Chasis SIN collision -->

    <inertial>
      <origin xyz="0 0 0.30" rpy="0 0 0"/>
      <mass value="20.0"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.6" iyz="0" izz="2.0"/>
    </inertial>
  </link>

  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.20 0.0 0.45" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.04"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.40 0.0 0.40" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.35" rpy="0 0 0"/>
  </joint>

  <link name="gps_link"/>

  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="0.0 0.0 0.45" rpy="0 0 0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
  </link>

  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="-0.30 0.24 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
  </link>

  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="-0.30 -0.24 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Front Left steer -->
  <link name="front_left_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steer_link"/>
    <origin xyz="0.30 0.24 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- 30 grados = 0.5235987756 rad -->
    <limit lower="-0.5235987756" upper="0.5235987756" effort="50" velocity="2.0"/>
  </joint>

  <!-- Front Left wheel -->
  <link name="front_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
  </link>

  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="front_left_steer_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Front Right steer -->
  <link name="front_right_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steer_link"/>
    <origin xyz="0.30 -0.24 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- 30 grados = 0.5235987756 rad -->
    <limit lower="-0.5235987756" upper="0.5235987756" effort="50" velocity="2.0"/>
  </joint>

  <!-- Front Right wheel -->
  <link name="front_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
  </link>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="front_right_steer_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>0.48</wheel_separation>
      <wheel_diameter>0.30</wheel_diameter>
      <publish_odom>true</publish_odom>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <update_rate>50</update_rate>
    </plugin>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor type="gpu_lidar" name="lidar_3d">
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.57079632679</min_angle>
            <max_angle>1.57079632679</max_angle>
          </horizontal>
          <vertical>
            <samples>16</samples>
            <resolution>1</resolution>
            <min_angle>-0.1745329252</min_angle>
            <max_angle>0.1745329252</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.2</min>
          <max>50.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_lidar" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=/lidar/points</remapping>
        </ros>
        <frame_name>lidar_link</frame_name>
        <output_type>sensor_msgs/PointCloud2</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="camera_link">
    <sensor type="camera" name="front_camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.57079632679</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>50.0</far>
        </clip>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/</namespace>
          <remapping>image_raw:=/camera/image_raw</remapping>
        </ros>
        <camera_name>front_camera</camera_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <update_rate>100</update_rate>
      <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>imu:=/imu/data</remapping>
        </ros>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="gps_link">
    <sensor type="gps" name="gps_sensor">
      <update_rate>5</update_rate>
      <plugin name="gazebo_ros_gps" filename="libgazebo_ros_gps.so">
        <ros>
          <namespace>/</namespace>
          <remapping>fix:=/gps/fix</remapping>
        </ros>
        <frame_name>gps_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>

<?xml version="1.0"?>
<robot name="quad_ackermann_viewer_safe">

  <material name="black"><color rgba="0.08 0.08 0.08 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>

  <!-- =========================
       BASE
       ========================= -->
  <link name="base_link">
    <!-- Visual del chasis: bajado para no “flotar” -->
    <visual>
      <origin xyz="0 0 0.22" rpy="0 0 0"/>
      <geometry><box size="0.80 0.45 0.12"/></geometry>
      <material name="blue"/>
    </visual>

    <!-- Collision del chasis (IMPORTANTE para física) -->
    <collision>
      <origin xyz="0 0 0.22" rpy="0 0 0"/>
      <geometry><box size="0.80 0.45 0.12"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.22" rpy="0 0 0"/>
      <mass value="20.0"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.6" iyz="0" izz="2.0"/>
    </inertial>
  </link>

  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- =========================
       SENSORES (con inertial)
       (bajados para quedar sobre el chasis)
       ========================= -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.20 0.0 0.33" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.04"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.04"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.40 0.0 0.32" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="5e-5" ixy="0" ixz="0" iyy="5e-5" iyz="0" izz="5e-5"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.30" rpy="0 0 0"/>
  </joint>

  <link name="gps_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="5e-5" ixy="0" ixz="0" iyy="5e-5" iyz="0" izz="5e-5"/>
    </inertial>
  </link>

  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="0.0 0.0 0.34" rpy="0 0 0"/>
  </joint>

  <!-- =========================
       RUEDAS: visual+collision+inertial
       ========================= -->

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="-0.30 0.28 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="-0.30 -0.28 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Front Left steer -->
  <link name="front_left_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steer_link"/>
    <origin xyz="0.30 0.28 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.0"/>
    <limit lower="-0.5235987756" upper="0.5235987756" effort="50" velocity="5.0"/>
  </joint>

  <!-- Front Left wheel -->
  <link name="front_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="front_left_steer_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- Front Right steer -->
  <link name="front_right_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.04 0.10"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steer_link"/>
    <origin xyz="0.30 -0.28 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.0"/>
    <limit lower="-0.5235987756" upper="0.5235987756" effort="50" velocity="5.0"/>
  </joint>

  <!-- Front Right wheel -->
  <link name="front_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder radius="0.15" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="front_right_steer_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="100" velocity="100"/>
  </joint>

  <!-- =========================
       GAZEBO PLUGINS / SENSORS (Classic)
       ========================= -->

  <gazebo>
    <plugin name="ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <remapping>odom:=/odom</remapping>
      </ros>
      <left_steering_joint>front_left_steer_joint</left_steering_joint>
      <right_steering_joint>front_right_steer_joint</right_steering_joint>
      <left_wheel_joint>rear_left_wheel_joint</left_wheel_joint>
      <right_wheel_joint>rear_right_wheel_joint</right_wheel_joint>
      <!-- Compatibility tags for ackermann plugin variants -->
      <front_left_joint>front_left_wheel_joint</front_left_joint>
      <front_right_joint>front_right_wheel_joint</front_right_joint>
      <rear_left_joint>rear_left_wheel_joint</rear_left_joint>
      <rear_right_joint>rear_right_wheel_joint</rear_right_joint>
      <wheel_separation>0.56</wheel_separation>
      <wheelbase>0.60</wheelbase>
      <wheel_radius>0.15</wheel_radius>
      <wheel_diameter>0.30</wheel_diameter>
      <steering_limit>0.5235987756</steering_limit>
      <max_steer>0.5235987756</max_steer>
      <max_speed>2.0</max_speed>
      <left_steering_pid_gain>3000 0 1</left_steering_pid_gain>
      <right_steering_pid_gain>3000 0 1</right_steering_pid_gain>
      <left_steering_i_range>0 0</left_steering_i_range>
      <right_steering_i_range>0 0</right_steering_i_range>
      <linear_velocity_pid_gain>1000 0 1</linear_velocity_pid_gain>
      <linear_velocity_i_range>0 0</linear_velocity_i_range>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <publish_distance>false</publish_distance>
      <publish_steerangle>false</publish_steerangle>
      <publish_tf>true</publish_tf>
      <odom_frame>odom</odom_frame>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <base_frame>base_footprint</base_frame>
      <update_rate>50</update_rate>
    </plugin>
  </gazebo>

  <!-- Lidar: Gazebo Classic usa gpu_ray -->
  <gazebo reference="lidar_link">
    <sensor type="gpu_ray" name="lidar_3d">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.57079632679</min_angle>
            <max_angle> 1.57079632679</max_angle>
          </horizontal>
          <vertical>
            <samples>16</samples>
            <resolution>1</resolution>
            <min_angle>-0.1745329252</min_angle>
            <max_angle> 0.1745329252</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.2</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_lidar" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=/lidar/points</remapping>
        </ros>
        <frame_name>lidar_link</frame_name>
        <output_type>sensor_msgs/PointCloud2</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="camera_link">
    <sensor type="camera" name="front_camera">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.57079632679</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>50.0</far>
        </clip>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/</namespace>
          <remapping>image_raw:=/camera/image_raw</remapping>
        </ros>
        <camera_name>front_camera</camera_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <update_rate>100</update_rate>
      <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>imu:=/imu/data</remapping>
        </ros>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="gps_link">
    <sensor type="gps" name="gps_sensor">
      <update_rate>5</update_rate>
      <!-- OJO: este filename depende de tu instalación.
           Si no existe, Gazebo lo va a decir en consola. -->
      <plugin name="gazebo_ros_gps" filename="libgazebo_ros_gps_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=/gps/fix</remapping>
        </ros>
        <frame_name>gps_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
